<Window x:Class="Detrav.Teroniffer.Windows.CalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор данных"
        Height="180"
        Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Тип данных:" />
            <ComboBox x:Name="comboBoxType" />
            <Label Content="Значение:" />
            <TextBox Name="textBoxValue"
                     Text="0"
                     DockPanel.Dock="Left"
                     HorizontalAlignment="Stretch"
                     TextChanged="textBoxValue_TextChanged" />
            <Label Content="Hex:" />
            <TextBox Name="textBoxHex"
                     Text="0"
                     DockPanel.Dock="Left"
                     HorizontalAlignment="Stretch"
                     TextChanged="textBoxHex_TextChanged" />
        </StackPanel>
    </Grid>
</Window>