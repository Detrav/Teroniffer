<UserControl x:Class="Detrav.Teroniffer.UserElements.StructureElementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="20"
             Height="20" 
             MinWidth="640"
             d:DesignWidth="640">
    <StackPanel Orientation="Horizontal">
        <Label x:Name="labelNum"
               Width="32"
               Content="0"
               Padding="2 0"
               HorizontalContentAlignment="Right"
               VerticalContentAlignment="Center" />
        <TextBox x:Name="textBoxName"
                 Width="128" />
        <TextBox x:Name="textBoxStart"
                 Width="128" />
        <TextBox x:Name="textBoxEnd"
                 Width="128" />
        <ComboBox  Width="128" />
        <Button Content="Up"
                Width="32" />
        <Button Content="Dwn"
                Width="32" />
        <Button Content="Del"
                Width="32" Click="ButtonDel_Click" />
    </StackPanel>
</UserControl>
